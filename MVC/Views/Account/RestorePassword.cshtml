@model MejorPrecio3.MVC.Models.ModifyPasswordViewModel

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="POST" action="/Account/RestorePassword">
            <div>
                <label asp-for="mail" class="control-label">Mail</label>
                <input asp-for="mail" class="form-control" type="email" />
                <span asp-validation-for="mail" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="password" class="control-label">Nueva Contraseña</label>
                <input asp-for="password" class="form-control" type="password" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="confirmPassword" class="control-label">Confirmar Contraseña</label>
                <input asp-for="confirmPassword" class="form-control" type="password" />
                <span asp-validation-for="confirmPassword" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Cambiar Contraseña" class="btn btn-primary" />
            </div>
        </form>
