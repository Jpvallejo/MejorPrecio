@model IEnumerable<MejorPrecio3.Models.Product>

@{
    ViewData["Title"] = "Productos";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Marca
            </th>
            <th>
                Codigo de Barras
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Brand
                </td>
                <td>
                    @item.Barcode
                </td>
                <td>
                    <a method="DELETE" data-confirm="Are you sure?" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>