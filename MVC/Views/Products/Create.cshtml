@model MejorPrecio3.Models.Product
@{
    ViewData["Title"] = "Nuevo Producto";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Products" method="POST">
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input required="required" asp-for="Name" class="form-control" id="provider-remote" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label">Marca</label>
                <input value="Sin Marca" asp-for="Brand" class="form-control"></input>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
                <label asp-for="Barcode" class="control-label">Codigo de Barras</label>
            <div class="input-group form-group col-md-12">
                <input id="barcode" asp-for="Barcode" class="form-control" type="number" />
                <span asp-validation-for="Barcode" class="text-danger"></span>
                            <span class="input-group-btn">
                                <input type="file" name="file" id="file" style="display:none;" />
                                <input id="upload" onclick="ClickButton('#file','#barcode');" type="button" class="btn btn-primary" value="&#xf030; Cargar Codigo de Barras"  />
                            </span>
            </div>
            <input type="submit" class="btn btn-primary" value="Subir Producto" />
        </form>
    </div>


    <div class="col-md-4">
    </div>
</div>


<script src="~/js/barcodeScript.js"></script>
