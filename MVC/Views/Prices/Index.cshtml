@model IEnumerable<MejorPrecio3.Models.Price>

@{
    ViewData["Title"] = "Precios";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Marca
            </th>
            <th>
                Codigo de Barras
            </th>
            <th>
                Precio
            </th>
            <th>
                Latitud
            </th>
            <th>
                Longitud
            </th>
            <th>
                Fecha de Carga
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.product.Name
                </td>
                <td>
                    @item.product.Brand
                </td>
                <td>
                    @item.product.Barcode
                </td>
                <td>
                    @item.price.ToString("c2")
                </td>
                <td>
                    @item.latitude
                </td>
                <td>
                    @item.longitude
                </td>
                <th>
                    @item.date
                </th>
                <td>
                    <a method="get" data-confirm="Are you sure?" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    input {
        border: 0ch;
    }
</style>